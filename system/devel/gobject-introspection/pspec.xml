    <Package>
        <Name>gobject-introspection</Name>
        <RuntimeDependencies>
            <Dependency>libffi</Dependency>
            <Dependency>glib2</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="data">/usr/lib</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
