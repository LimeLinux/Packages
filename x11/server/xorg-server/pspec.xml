            <Path fileType="man">/usr/share/man/man1/Xorg.1</Path>
            <Path fileType="man">/usr/share/man/man1/cvt.1</Path>
            <Path fileType="man">/usr/share/man/man1/gtf.1</Path>
            <Path fileType="man">/usr/share/man/man4/exa.4</Path>
